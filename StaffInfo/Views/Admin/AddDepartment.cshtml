
@using StaffInfo.Models
@model DepartmentModel
    @{ 
        Layout = null;
    }
@Scripts.Render("~/Scripts/js")
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/notify.min.js"></script>
@using (Html.BeginForm("AddDepartment", "Admin", FormMethod.Post, new { onsubmit = "return AddDepartment(this)", @class = "form -horizontal", role = "form" }))
{
    <div class="form-group form-control-sm">
        <div class="form-row">
        @Html.LabelFor(model => model.Department_ID, "Department Code", new { @class = "col-md-3" })
            @Html.TextBoxFor(model => model.Department_ID, null, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Department_ID)
        </div>
    </div>
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Department_Name, "Department Name", new { @class = "col-md-3" })

            @Html.TextBoxFor(model => model.Department_Name, null, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Department_Name)
        </div>
    </div>
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Primary_Number, "Primary Number", new { @class = "col-md-3" })

            @Html.TextBoxFor(model => model.Primary_Number, null, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Primary_Number)
        </div>

    </div>
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Secondary_Number, "Department Name", new { @class = "col-md-3" })

            @Html.TextBoxFor(model => model.Secondary_Number, null, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Secondary_Number)
        </div>
    </div>
    <hr />
    <footer>
        <div class="form-group form-control-sm">
            <input type="reset" class="btn float-right btn-outline-dark" value="Reset" style="margin-left:5px" />
            <input type="submit" class="btn float-right btn-outline-dark" value="Register" />
        </div>
    </footer>
}