

@using StaffInfo.Models
@model AddressModel
@{ 
    Layout = null;
}
@Scripts.Render("~/Scripts/js")
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/notify.min.js"></script>
@using (Html.BeginForm("AddAddress", "Admin", FormMethod.Post, new { onsubmit= "return AddressSave(this)", @class = "form-horizontal", role = "form" }))
{
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Address_Code, "Address Code", new { @class = "col-md-3" })

            @Html.TextBoxFor(model => model.Address_Code, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Address_Code)
        </div>
    </div>
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Place_Name, "Place", new { @class = "col-md-3" })

            @Html.TextBoxFor(model => model.Place_Name, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Place_Name)
        </div>
    </div>
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Mun_VDC, "Municipality / VDC ", new { @class = "col-md-3" })
            @Html.TextBoxFor(model => model.Mun_VDC, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Mun_VDC)
        </div>
        </div>
    <div class="form-group form-control-sm">
        <div class="form-row">
            @Html.LabelFor(model => model.Ward_No, "Ward No", new { @class = "col-md-3" })

            @Html.TextBoxFor(model => model.Ward_No, new { @class = "form-control col form-control-sm" })
            @Html.ValidationMessageFor(model => model.Ward_No)
        </div>
    </div>
    <hr />
    <footer>
        <div class="form-group form-control-sm">
            <input type="reset" class="btn float-right btn-outline-dark" value="Reset" style="margin-left:5px" />
            <input type="submit" class="btn float-right btn-outline-dark" value="Register" />
        </div>
    </footer>   
}